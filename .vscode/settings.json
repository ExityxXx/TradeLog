{
    // Terminal
    "terminal.integrated.profiles.windows": {
        "Command Prompt (UTF-8)": {
            "path": ["cmd.exe"],
            "args": ["/k", "chcp 65001"]
        }
    },
    "terminal.integrated.defaultProfile.windows": "Command Prompt (UTF-8)",
    "terminal.integrated.fontFamily": "JetBrains Mono",
    "terminal.integrated.fontSize": 22,
    // Code Runner
    
    "code-runner.runInTerminal": true,
    "code-runner.clearPreviousOutput": true,
    "code-runner.respectShebang": true,
    "code-runner.fileDirectoryAsCwd": true,
    "code-runner.executorMap": {
        "cpp": "g++ -std=c++20 -O4 $fileName -o $fileNameWithoutExt && $fileNameWithoutExt"
    },
    "files.associations": {
        "string": "cpp",
        "iostream": "cpp",
        "string_view": "cpp",
        "format": "cpp",
        "fstream": "cpp",
        "istream": "cpp",
        "ostream": "cpp",
        "stdexcept": "cpp",
        "system_error": "cpp",
        "typeinfo": "cpp",
        "variant": "cpp",
        "iosfwd": "cpp",
        "array": "cpp",
        "atomic": "cpp",
        "bit": "cpp",
        "cctype": "cpp",
        "charconv": "cpp",
        "clocale": "cpp",
        "cmath": "cpp",
        "compare": "cpp",
        "concepts": "cpp",
        "cstddef": "cpp",
        "cstdint": "cpp",
        "cstdio": "cpp",
        "cstdlib": "cpp",
        "ctime": "cpp",
        "cwchar": "cpp",
        "cwctype": "cpp",
        "deque": "cpp",
        "unordered_map": "cpp",
        "vector": "cpp",
        "exception": "cpp",
        "algorithm": "cpp",
        "functional": "cpp",
        "iterator": "cpp",
        "memory": "cpp",
        "memory_resource": "cpp",
        "numeric": "cpp",
        "optional": "cpp",
        "random": "cpp",
        "tuple": "cpp",
        "type_traits": "cpp",
        "utility": "cpp",
        "initializer_list": "cpp",
        "limits": "cpp",
        "new": "cpp",
        "numbers": "cpp",
        "ranges": "cpp",
        "span": "cpp",
        "streambuf": "cpp",
        "text_encoding": "cpp"
    }
}